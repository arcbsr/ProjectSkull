<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_20"/> <!-- semi-transparent black -->
            <corners android:radius="@dimen/dp_24"/>
        </shape>
    </item>

    <!-- Actual background layer -->
    <item android:top="@dimen/dp_1" android:left="@dimen/dp_1" android:right="@dimen/dp_1" android:bottom="@dimen/dp_1">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/dp_24"/>
        </shape>
    </item>
</layer-list>

