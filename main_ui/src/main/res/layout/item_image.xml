<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_12">

        <!-- Image Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/image_card"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_160"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/dp_8"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/dp_16"
            app:cardElevation="@dimen/dp_6">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/im_placeholder" />


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/im_reload"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_68"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="loading_btn.json"
                    app:lottie_loop="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layout_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_20"
            android:visibility="gone">

            <com.hope.resources.shape.RoundImageView
                android:id="@+id/im_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_2"
                android:src="@drawable/ic_delete"
                app:rv_radius="@dimen/dp_66" />
        </LinearLayout>
        <!-- Chat Bubble as Image Detail -->
        <RelativeLayout
            android:id="@+id/layout_chat_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.hope.resources.shape.RoundImageView
                android:id="@+id/chat_bubble_icon"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_2"
                android:src="@drawable/im_placeholder"
                app:rv_radius="@dimen/dp_66" />

            <TextView
                android:id="@+id/chat_bubble"
                style="@style/TextViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/chat_bubble_icon"
                android:background="@drawable/bg_chat_bubble_arrow"
                android:lineSpacingExtra="@dimen/dp_4"
                android:maxWidth="@dimen/dp_260"
                android:maxLines="4"
                android:ellipsize="end"
                android:textColor="@color/black"
                tools:ignore="HardcodedText"
                tools:text="A scenic view " />

            <com.hope.resources.shape.RoundImageView
                android:id="@+id/im_reload2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_2"
                android:src="@drawable/ic_reload"
                app:rv_radius="@dimen/dp_66" />
        </RelativeLayout>
    </LinearLayout>
</layout>
